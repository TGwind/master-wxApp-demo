/* pages/game/game.wxss */
.top_swiper {
  width: 750rpx;
  height: 300rpx;
}
.TagPageView {
  margin-top: 10rpx;
}
.TagPageView .button{
  margin-left: 20rpx;
}
/* 标签1 卡片最外层样式 */
.PPTCardList01{
  width: 360rpx;
  height: 800rpx;
  background: #ffffff;
  float: left;
  margin-top: 25rpx;
  margin-left: 8rpx;
  border-radius: 32rpx;
  border: 1px solid rgb(233, 226, 226);
  box-shadow: 0px 15px 10px -12px rgb(175, 165, 165);
}
/* 标签1 卡片文字介绍样式 */
.PPTCardList01 .text{
  width: 100%;
  margin-top: 15rpx;
  margin-bottom: 5rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: rgb(0, 0, 0);
  text-align: center;
}
/* 标签1 卡片日期样式 */
.PPTCardList01 .text-date{
  width: 100%;
  font-size: 24rpx;
  font-weight: 400;
  color: rgb(0, 0, 0);
  text-align: center;
}
/* 标签1 卡片图片样式 */
.PPTCardList01 .imge{
  width: 360rpx;
  height: 650rpx;
  border-radius:  30rpx 30rpx 0 0;
}
/* 标签1 浏览量字体样式 */
.PPTCardList01 .visitNum {
  text-align: right;
  margin-right: 25rpx;
  /* 文本靠右 */ 
  font-size: 24rpx;
  font-weight: 100;
  color: rgb(110, 100, 100);
}
/* 标签2 卡片样式  */
.PPTCardList02 {
  justify-content: center;
  margin: 20rpx;
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  padding: 20rpx;
}
.PPTCardList02 .text {
  width: 100%;
  font-size: 36rpx;
  font-weight: 500;
  color: rgb(0, 0, 0);
  margin-left: 24rpx;
}
.PPTCardList02 .imge {
  width: 360rpx;
  height: 200rpx;

  border-radius: 16rpx;
}
.PPTCardList02 .Tag {
  margin-left: 24rpx;
}
.PPTCardList02 .visitNum {
  width: 100%;
  float: right;
  /* 文本靠右 */
  text-align: right;   
  font-size: 24rpx;
  font-weight: 100;
  color: rgb(0, 0, 0);
  margin-top: 15%;
}

